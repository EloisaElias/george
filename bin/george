#!/usr/bin/env python
import sys

def usage():
    print '%s [init|check]' % sys.argv[0]
    exit(1)

if len(sys.argv) != 2:
    usage()
elif sys.argv[1] not in {'init','check'}:
    usage()
elif sys.argv[1] == 'check':
    import nose, os
    # nose.main(argv = [os.path.join(__file__, '..', 'george', 'check.py')])
    # nose.main(argv = ['/home/tlevine/Zipfian/george/george/check.py'])
elif sys.argv[1] == 'init':
    import george.init
    george.init.main()
