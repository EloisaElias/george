#!/usr/bin/env python
import sys

def usage():
    print '%s [init|check]' % sys.argv[0]
    exit(1)

if len(sys.argv) != 2:
    usage()
elif sys.argv[1] not in {'init','check'}:
    usage()
elif sys.argv[1] == 'check':
    import nose
    import george.check
    nose.run(george.check)
elif sys.argv[1] == 'init':
    import george.init
    george.init.main()
