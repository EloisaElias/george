#!/bin/sh

usage() {
  echo "$0 [init|check]"
  exit 1
}

if test "$#" -ne 1; then
  usage
elif [ "$1" = init ]; then
  python -c 'import george.init;george.init.main()'
elif [ "$1" = check ]; then
  # This is a very disgusting hack.
  # nose discovers tests in the current directory,
  # but we want to load them from another directory,
  # so we make a symlink in the current directory.
  nosetests ~/Zipfian/george/george/check.py
else
  usage
fi
