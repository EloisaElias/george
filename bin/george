#!/bin/sh

usage() {
  echo "$0 [init-sprint|check-sprint|check-project]"
  exit 1
}

if test "$#" -ne 1; then
  usage
elif [ "$1" = 'init-sprint' ]; then
  python -c 'import george.init;george.init.main()'
elif [ "$1" = 'check-sprint' ]; then
  # This is a very disgusting hack.
  # nose discovers tests in the current directory,
  # but we want to load them from another directory,
  # so we hardcode that other directory.
  nosetests ~/Zipfian/george/george/check_sprint.py
elif [ "$1" = 'check-project' ]; then
  nosetests ~/Zipfian/george/george/check_project.py
else
  usage
fi
